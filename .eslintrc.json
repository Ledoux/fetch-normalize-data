{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:jest/all"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "jest/no-hooks": "off",
    "jest/prefer-expect-assertions": "off",
    "jest/prefer-inline-snapshots": "off",
    "no-var": "error",
    "react/forbid-component-props": "off",
    "react/no-set-state": "off",
    "react/static-property-placement": "off",
    "semi": ["error", "never"]
  }
}
